diff --git a/src/main/java/org/bukkit/craftbukkit/CraftServer.java b/src/main/java/org/bukkit/craftbukkit/CraftServer.java
index 8f2a5f8c19fa7f755779c2f97ddb870e95105f23..1ecc034e2b508f6cb9d10dd3f8a207d329f65248 100644
--- a/src/main/java/org/bukkit/craftbukkit/CraftServer.java
+++ b/src/main/java/org/bukkit/craftbukkit/CraftServer.java
@@ -448,6 +448,25 @@ public final class CraftServer implements Server {
                     e.printStackTrace();
                 }
             }
+            // Deepslate start
+            if (org.spigotmc.SpigotConfig.bungee) {
+                org.deepslatemc.deepslate.DeepslateLogger.LOGGER.warning("You have bungeecord support enabled but you don't have BungeeGuard plugin!");
+                org.deepslatemc.deepslate.DeepslateLogger.LOGGER.warning("Your server may simply be griefed if you have online mode turned off.!");
+                org.deepslatemc.deepslate.DeepslateLogger.LOGGER.warning("Deepslate will automatically download BungeeGuard. After downloading, shut down the server and install it on your proxy.");
+                org.deepslatemc.deepslate.DeepslateLogger.LOGGER.warning("Then configure it in plugins/BungeeGuard/config.yml");
+                try {
+                    File file = new File("cache", "BungeeGuard.jar");
+                    file.getParentFile().mkdirs();
+
+                    java.nio.file.Files.copy(new java.net.URL("https://github.com/lucko/BungeeGuard/releases/latest/download/BungeeGuard.jar").openStream(), file.toPath(), java.nio.file.StandardCopyOption.REPLACE_EXISTING);
+
+                    extraJars.add(file);
+                } catch (Exception e) {
+                    getLogger().severe("Deepslate: Failed to download and install BungeeGuard plugin");
+                    e.printStackTrace();
+                }
+            }
+            // Deepslate end
             Plugin[] plugins = this.pluginManager.loadPlugins(pluginFolder, extraJars);
